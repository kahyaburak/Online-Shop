<%- include('../../shared/includes/head', {pageTitle:"Signup"}) %>
   <link rel="stylesheet" href="/styles/forms.css">
   <link rel="stylesheet" href="/styles/auth.css">
   </head>

   <body>
      <%- include('../../shared/includes/header') %>
         <main>
            <h1>Create New Account</h1>
            <% if(inputData.errorMessage){ %>
               <section class="alert">
                  <h2>Invalid Input</h2>
                  <p>
                     <%= inputData.errorMessage %>
                  </p>
               </section>
               <% } %>
                  <form action="/signup" method="POST">
                     <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
                     <p>
                        <label for="email">Email</label>
                        <input type="email" name="email" id="email" required value="<%= inputData.email %>">
                     </p>
                     <p>
                        <label for="confirm-email">Confirm Email</label>
                        <input type="email" name="confirm-email" id="confirm-email" required
                           value="<%= inputData.confirmEmail %>">
                     </p>
                     <p>
                        <label for="password">Password</label>
                        <input type="password" name="password" id="password" minlength="6" required
                           value="<%= inputData.password %>">
                     </p>
                     <hr>
                     <p>
                        <label for="fullname">Full Name</label>
                        <input type="txt" name="fullname" id="fullname" required value="<%= inputData.fullname %>">
                     </p>
                     <p>
                        <label for="street">Street</label>
                        <input type="text" name="street" id="street" required value="<%= inputData.street %>">
                     </p>
                     <p>
                        <label for="postal">Postal Code</label>
                        <input type="text" name="postal" id="postal" minlength="5" maxlength="5" required
                           value="<%= inputData.postal %>">
                     </p>
                     <p>
                        <label for="city">City</label>
                        <input type="text" name="city" id="city" required value="<%= inputData.city %>">
                     </p>
                     <button class="btn">Create Account</button>
                     <p id="switch-form"><a href="/login">Login instead</a></p>
                  </form>
         </main>

         <%- include('../../shared/includes/footer') %>